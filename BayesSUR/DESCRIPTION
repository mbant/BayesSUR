Package: BayesSUR
Type: Package
Title: Bayesian Seemingly Unrelated Regression
Version: 2.1-6
Date: 2023-12-06
Authors@R: c(person("Marco", "Banterle", email = "marco.banterle@gmail.com", role = c("aut")),
             person("Zhi", "Zhao", email = "zhi.zhao@medisin.uio.no", role = c("aut", "cre")),
